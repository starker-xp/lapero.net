{{ nomServiceController }}.{{ nomControllerCamelize|lower }}.cget:
    path:     /{{ nomController|lower }}s
    defaults: { _controller: "{{namespaceController}}:{{ nomController }}:cget" }
    methods:  [GET]

{{ nomServiceController }}.{{ nomControllerCamelize|lower }}.get:
    path:     /{{ nomController|lower }}s/{id}
    defaults: { _controller: "{{namespaceController}}:{{ nomController }}:get" }
    methods:  [GET]
    requirements:
        {{ nomController|lower }}_id: '\d+'

{{ nomServiceController }}.{{ nomControllerCamelize|lower }}.post:
    path:     /{{ nomController|lower }}s
    defaults: { _controller: "{{namespaceController}}:{{ nomController }}:post" }
