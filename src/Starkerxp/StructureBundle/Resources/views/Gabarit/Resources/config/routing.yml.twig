    path:     /{{ nomController|lower }}s/{id}
    defaults: { _controller: "{{namespaceController}}:{{ nomController }}:put" }
    methods:  [PUT]
    requirements:
        {{ nomController|lower }}_id: '\d+'

{{ nomServiceController }}.{{ nomControllerCamelize|lower }}.delete:
    path:     /{{ nomController|lower }}s/{id}
    defaults: { _controller: "{{namespaceController}}:{{ nomController }}:delete" }
    methods:  [DELETE]
    requirements:
        {{ nomController|lower }}_id: '\d+'
